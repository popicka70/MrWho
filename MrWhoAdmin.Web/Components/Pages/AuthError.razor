@page "/auth-error"
@page "/auth/error"
@inject ILogger<AuthError> Logger
@inject NavigationManager Navigation

<PageTitle>Authentication Error - MrWho Admin</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Authentication Error
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h5>Unable to authenticate</h5>
                        @if (!string.IsNullOrEmpty(ErrorMessage))
                        {
                            <p class="mb-0">@ErrorMessage</p>
                        }
                        else
                        {
                            <p class="mb-0">Response status code does not indicate success: 403 (Forbidden).</p>
                        }
                    </div>
                    
                    <div class="mt-4">
                        <h6>What you can do:</h6>
                        <ul>
                            <li>Try logging in again</li>
                            <li>Clear your browser cookies and cache</li>
                            <li>Contact support if the problem persists</li>
                        </ul>
                    </div>
                    
                    <div class="mt-4 d-grid gap-2 d-md-flex justify-content-md-end">
                        <button @onclick="@(async () => await LogoutAndRetry())" class="btn btn-primary">
                            <i class="bi bi-arrow-clockwise me-1"></i>
                            Try Again
                        </button>
                        <button @onclick="GoHome" class="btn btn-secondary">
                            <i class="bi bi-house me-1"></i>
                            Go Home
                        </button>
                        <button @onclick="@(async () => await ForceLogout())" class="btn btn-outline-danger">
                            <i class="bi bi-box-arrow-right me-1"></i>
                            Clear Session & Logout
                        </button>
                    </div>
                </div>
            </div>
            
            @if (ShowTechnicalDetails)
            {
                <div class="card mt-3">
                    <div class="card-header">
                        <h6 class="mb-0">Technical Details</h6>
                    </div>
                    <div class="card-body">
                        <small class="text-muted">
                            <strong>Error:</strong> @(ErrorMessage ?? "403 Forbidden")<br/>
                            <strong>Description:</strong> @(ErrorDescription ?? "Authentication failed or access denied")<br/>
                            <strong>Status Code:</strong> @(StatusCode ?? "403")<br/>
                            <strong>Time:</strong> @DateTime.UtcNow.ToString("yyyy-MM-dd HH:mm:ss UTC")<br/>
                            <strong>Request ID:</strong> @RequestId<br/>
                            <strong>Current URL:</strong> @Navigation.Uri
                        </small>
                    </div>
                </div>
            }
            
            <div class="text-center mt-3">
                <button @onclick="ToggleTechnicalDetails" class="btn btn-link btn-sm">
                    @(ShowTechnicalDetails ? "Hide" : "Show") Technical Details
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter, SupplyParameterFromQuery] public string? Error { get; set; }
    [Parameter, SupplyParameterFromQuery] public string? ErrorDescription { get; set; }
    [Parameter, SupplyParameterFromQuery] public string? StatusCode { get; set; }
    
    private string? ErrorMessage => Error;
    private string RequestId = Guid.NewGuid().ToString("N")[..8];
    private bool ShowTechnicalDetails = false;

    protected override void OnInitialized()
    {
        Logger.LogWarning("Authentication error page displayed. Error: {Error}, Description: {Description}, StatusCode: {StatusCode}", 
            ErrorMessage ?? "Unknown", ErrorDescription ?? "None", StatusCode ?? "Unknown");
    }

    private async Task LogoutAndRetry()
    {
        try
        {
            Logger.LogInformation("User requesting logout and retry from authentication error page");
            
            // Force logout and redirect to login
            Navigation.NavigateTo("/auth/logout?returnUrl=/login", forceLoad: true);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error during logout and retry");
            Navigation.NavigateTo("/login", forceLoad: true);
        }
    }

    private async Task ForceLogout()
    {
        try
        {
            Logger.LogInformation("User requesting force logout from authentication error page");
            
            // Clear all authentication and redirect to home
            Navigation.NavigateTo("/auth/logout?clearAll=true", forceLoad: true);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error during force logout");
            Navigation.NavigateTo("/auth/logout", forceLoad: true);
        }
    }

    private void GoHome()
    {
        Logger.LogInformation("User navigating to home from auth error page");
        Navigation.NavigateTo("/", forceLoad: true);
    }

    private void ToggleTechnicalDetails()
    {
        ShowTechnicalDetails = !ShowTechnicalDetails;
    }
}
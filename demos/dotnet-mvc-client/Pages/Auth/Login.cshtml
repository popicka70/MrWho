@page
@model MrWhoOidc.RazorClient.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Sign in";
}

@{
    var mode = (ViewData["AuthMode"] as string) ?? string.Empty;
}

@if (string.Equals(mode, "jar", System.StringComparison.OrdinalIgnoreCase))
{
    <p>Redirecting to MrWhoOidc using a signed request object with JARM response...</p>
}
else
{
    <p>Redirecting to MrWhoOidc for authentication...</p>
}

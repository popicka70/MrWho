@page "/clients"
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Clients - MrWho Admin</PageTitle>

<RadzenText TextStyle="TextStyle.H3" TagName="TagName.H1" class="rz-pt-8">
    <RadzenIcon Icon="apps" class="rz-me-1" />
    Clients Management
</RadzenText>

<RadzenCard class="rz-my-4">
    <RadzenAlert AlertStyle="AlertStyle.Info">
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
            <RadzenIcon Icon="construction" />
            <RadzenText>This page is under construction. Client management features will be available soon.</RadzenText>
        </RadzenStack>
    </RadzenAlert>
    
    <RadzenText TextStyle="TextStyle.H6" class="rz-mt-4 rz-mb-3">Available Clients (Mock Data)</RadzenText>
    
    <RadzenDataGrid Data="@mockClients" TItem="MockClient" AllowPaging="true" PageSize="5">
        <Columns>
            <RadzenDataGridColumn TItem="MockClient" Property="ClientId" Title="Client ID" />
            <RadzenDataGridColumn TItem="MockClient" Property="Name" Title="Name" />
            <RadzenDataGridColumn TItem="MockClient" Property="Type" Title="Type" />
            <RadzenDataGridColumn TItem="MockClient" Property="Realm" Title="Realm" />
        </Columns>
    </RadzenDataGrid>
</RadzenCard>

@code {
    private List<MockClient> mockClients = new()
    {
        new() { ClientId = "mrwho_admin_web", Name = "MrWho Admin Web Application", Type = "Confidential", Realm = "admin" },
        new() { ClientId = "postman_client", Name = "Postman Test Client", Type = "Confidential", Realm = "default" },
        new() { ClientId = "spa-dev-app", Name = "SPA Development App", Type = "Public", Realm = "sample-development" },
        new() { ClientId = "web-staging-app", Name = "Web Staging Application", Type = "Confidential", Realm = "sample-staging" },
        new() { ClientId = "mobile-demo-app", Name = "Mobile Demo Application", Type = "Public", Realm = "demo-multi-tenant" }
    };

    public class MockClient
    {
        public string ClientId { get; set; } = "";
        public string Name { get; set; } = "";
        public string Type { get; set; } = "";
        public string Realm { get; set; } = "";
    }
}
@page "/Account/Logout"
@model MrWho.ApiService.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Logout - MrWho";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .logout-container {
            min-height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .logout-card {
            background: white;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        }
    </style>
</head>
<body>
    <div class="logout-container d-flex align-items-center justify-content-center">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="logout-card p-4 text-center">
                        <h2 class="text-primary mb-3">MrWho</h2>
                        <div class="mb-4">
                            <i class="material-icons" style="font-size: 64px; color: #28a745;">check_circle</i>
                        </div>
                        <h4 class="mb-3">Successfully Logged Out</h4>
                        <p class="text-muted mb-4">You have been securely signed out of your account.</p>
                        
                        @if (!string.IsNullOrEmpty(Model.PostLogoutRedirectUri))
                        {
                            <div class="d-grid gap-2">
                                <a href="@Model.PostLogoutRedirectUri" class="btn btn-primary">
                                    Continue to Application
                                </a>
                                <a href="/Account/Login" class="btn btn-outline-secondary">
                                    Sign In Again
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="d-grid">
                                <a href="/Account/Login" class="btn btn-primary">
                                    Sign In Again
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
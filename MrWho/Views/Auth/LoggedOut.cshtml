@using MrWho.Shared.Constants
@{
    ViewData["Title"] = "Logged Out";
    Layout = "_Layout";
    var clientName = ViewData[ViewDataKeys.ClientName] as string;
    var returnUrl = ViewData[ViewDataKeys.ReturnUrl] as string;
    var error = ViewData["LogoutError"] as string; // keep existing key until constant defined if needed

    // Build a Sign In Again link that preserves context
    var effectiveReturnUrl = returnUrl;
    if (string.IsNullOrEmpty(effectiveReturnUrl))
    {
        // Fallback to query string if not provided via ViewData
        var qsReturn = Context.Request.Query[QueryParameterNames.ReturnUrl].ToString();
        if (!string.IsNullOrEmpty(qsReturn)) effectiveReturnUrl = qsReturn;
    }

    var effectiveClientId = (ViewData[ViewDataKeys.ClientId] as string) ?? Context.Request.Query[QueryParameterNames.ClientId].ToString();
    if (string.IsNullOrEmpty(effectiveClientId))
    {
        // Also try OIDC-style parameter name
        var oidcClient = Context.Request.Query[QueryParameterNames.OidcClientId].ToString();
        if (!string.IsNullOrEmpty(oidcClient)) effectiveClientId = oidcClient;
    }

    var signInAgainHref = "/connect/login";
    var queryParts = new List<string>();
    if (!string.IsNullOrEmpty(effectiveReturnUrl)) queryParts.Add($"{QueryParameterNames.ReturnUrl}=" + Uri.EscapeDataString(effectiveReturnUrl));
    if (!string.IsNullOrEmpty(effectiveClientId)) queryParts.Add($"{QueryParameterNames.ClientId}=" + Uri.EscapeDataString(effectiveClientId));
    if (queryParts.Count > 0) signInAgainHref += "?" + string.Join("&", queryParts);

    var frontChannelClients = Context.Items["FrontChannelLogoutIframes"] as List<string> ?? new List<string>();
}

<div class="d-none" aria-hidden="true">
@foreach (var iframe in frontChannelClients)
{
    <iframe src="@iframe" style="display:none;width:0;height:0;" title="front-channel-logout"></iframe>
}
</div>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card">
                <div class="card-header text-center bg-success text-white">
                    <h3><i class="bi bi-check-circle"></i> Successfully Logged Out</h3>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-shield-check text-success" style="font-size: 3rem;"></i>
                    </div>
                    
                    <h5 class="mb-3">You have been securely logged out</h5>
                    
                    @if (!string.IsNullOrEmpty(clientName))
                    {
                        <p class="text-muted mb-3">
                            Your session with <strong>@clientName</strong> has been terminated.
                        </p>
                    }
                    else
                    {
                        <p class="text-muted mb-3">
                            Your MrWho session has been terminated and all authentication cookies have been cleared.
                        </p>
                    }

                    @if (!string.IsNullOrWhiteSpace(error))
                    {
                        <div class="alert alert-warning text-start" role="alert">
                            <i class="bi bi-exclamation-triangle me-1"></i>
                            @error
                        </div>
                    }
                    
                    <div class="alert alert-info text-start">
                        <h6><i class="bi bi-info-circle"></i> What happened?</h6>
                        <ul class="mb-0 small">
                            <li>Your authentication session has been ended</li>
                            <li>All related cookies have been cleared</li>
                            <li>You'll need to sign in again to access protected resources</li>
                            @if (!string.IsNullOrEmpty(clientName))
                            {
                                <li>You may also be logged out of other connected applications</li>
                            }
                        </ul>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                        @if (!string.IsNullOrEmpty(returnUrl) && Url.IsLocalUrl(returnUrl))
                        {
                            <a href="@returnUrl" class="btn btn-primary">
                                <i class="bi bi-arrow-return-left"></i> Return to Application
                            </a>
                        }
                        
                        <a href="@signInAgainHref" class="btn btn-outline-primary">
                            <i class="bi bi-box-arrow-in-right"></i> Sign In Again
                        </a>
                        
                        <a href="/" class="btn btn-outline-secondary">
                            <i class="bi bi-house"></i> Go to Home
                        </a>
                    </div>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h6><i class="bi bi-shield-lock"></i> Security & Privacy</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6 mb-2">
                            <i class="bi bi-check-circle text-success"></i> <small>Session Cleared</small>
                        </div>
                        <div class="col-6 mb-2">
                            <i class="bi bi-check-circle text-success"></i> <small>Cookies Removed</small>
                        </div>
                        <div class="col-6 mb-2">
                            <i class="bi bi-check-circle text-success"></i> <small>Secure Logout</small>
                        </div>
                        <div class="col-6 mb-2">
                            <i class="bi bi-check-circle text-success"></i> <small>Privacy Protected</small>
                        </div>
                    </div>
                    <small class="text-muted">
                        For maximum security, close all browser windows when using shared computers.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
@using MrWho.Shared.Constants
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var returnUrl = (string?)ViewData[ViewDataKeys.ReturnUrl] ?? "/";
    var clientId = (string?)ViewData[ViewDataKeys.ClientId] ?? string.Empty;
    var clientName = (string?)ViewData[ViewDataKeys.ClientName] ?? clientId;
    var requested = (string[])(ViewData[ViewDataKeys.RequestedScopes] ?? Array.Empty<string>());
    var already = (string[])(ViewData[ViewDataKeys.AlreadyGranted] ?? Array.Empty<string>());
    var missing = (string[])(ViewData[ViewDataKeys.MissingScopes] ?? Array.Empty<string>());
}
<div class="container" style="max-width: 720px; margin-top: 2rem;">
    <h2>Authorize access</h2>
    <p><strong>@clientName</strong> is requesting access to your account.</p>

    @if (missing.Length == 0)
    {
        <div class="alert alert-info">No new permissions are requested. You can continue.</div>
    }
    else
    {
        <p>This application is requesting the following permissions:</p>
        <ul>
            @foreach (var s in missing)
            {
                <li>@s</li>
            }
        </ul>
    }

    <form method="post" action="/connect/consent">
        @Html.AntiForgeryToken()
        <input type="hidden" name="@FormFieldNames.ReturnUrl" value="@returnUrl" />
        <input type="hidden" name="@FormFieldNames.ClientId" value="@clientId" />

        @foreach (var s in requested)
        {
            <input type="hidden" name="@FormFieldNames.Scopes" value="@s" />
        }

        <div class="form-check" style="margin-top: 1rem;">
            <input class="form-check-input" type="checkbox" value="true" id="remember" name="@FormFieldNames.Remember" checked>
            <label class="form-check-label" for="remember">
                Remember my decision
            </label>
        </div>

        <div style="margin-top: 1rem;">
            <button type="submit" class="btn btn-primary">Allow</button>
            <a href="/connect/access-denied?@QueryParameterNames.ReturnUrl=@Uri.EscapeDataString(returnUrl)&@QueryParameterNames.ClientId=@Uri.EscapeDataString(clientId)" class="btn btn-outline-secondary">Deny</a>
        </div>
    </form>
</div>

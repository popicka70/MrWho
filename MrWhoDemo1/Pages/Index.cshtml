@page
@model MrWhoDemo1.Pages.IndexModel
@using Microsoft.AspNetCore.Authentication
@{
    ViewData["Title"] = "Home page";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4 mb-4">Welcome to MrWho Demo Application 1</h1>
            
            @if (Model.ShowLogoutSuccess)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <h4><i class="bi bi-check-circle"></i> Logout Successful!</h4>
                    <p>You have been successfully logged out from both the demo application and the MrWho identity server.</p>
                    <p class="mb-0">You can now log in again or explore the application as an anonymous user.</p>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="alert alert-success">
                    <h4><i class="bi bi-check-circle"></i> Authentication Successful!</h4>
                    <p>Welcome <strong>@(User.Identity.Name ?? "Unknown User")</strong>!</p>
                    <p class="mb-0">You are currently logged in and can access protected resources.</p>
                </div>

                <div class="row">
                    <div class="col-lg-6 mb-4">
                        <div class="card">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0"><i class="bi bi-person-circle"></i> User Information</h5>
                            </div>
                            <div class="card-body">
                                <table class="table table-borderless">
                                    <tr>
                                        <td><strong>Name:</strong></td>
                                        <td>@(User.Identity.Name ?? "Not available")</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Email:</strong></td>
                                        <td>@(User.FindFirst("email")?.Value ?? "Not available")</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Subject ID:</strong></td>
                                        <td><code>@(User.FindFirst("sub")?.Value ?? "Not available")</code></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Authentication Type:</strong></td>
                                        <td>@(User.Identity.AuthenticationType ?? "Not available")</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Is Authenticated:</strong></td>
                                        <td><span class="badge bg-success">@User.Identity.IsAuthenticated</span></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6 mb-4">
                        <div class="card">
                            <div class="card-header bg-info text-white">
                                <h5 class="mb-0"><i class="bi bi-key"></i> Tokens</h5>
                            </div>
                            <div class="card-body">
                                @{
                                    var accessToken = await HttpContext.GetTokenAsync("access_token");
                                    var refreshToken = await HttpContext.GetTokenAsync("refresh_token");
                                    var idToken = await HttpContext.GetTokenAsync("id_token");
                                }
                                
                                <div class="mb-3">
                                    <label class="form-label"><strong>Access Token:</strong></label>
                                    @if (!string.IsNullOrEmpty(accessToken))
                                    {
                                        <textarea class="form-control font-monospace" rows="3" readonly>@accessToken</textarea>
                                        <small class="text-muted">Length: @accessToken.Length characters</small>
                                    }
                                    else
                                    {
                                        <p class="text-muted">Not available</p>
                                    }
                                </div>

                                <div class="mb-3">
                                    <label class="form-label"><strong>Refresh Token:</strong></label>
                                    @if (!string.IsNullOrEmpty(refreshToken))
                                    {
                                        <textarea class="form-control font-monospace" rows="2" readonly>@refreshToken</textarea>
                                        <small class="text-muted">Length: @refreshToken.Length characters</small>
                                    }
                                    else
                                    {
                                        <p class="text-muted">Not available</p>
                                    }
                                </div>

                                <div class="mb-3">
                                    <label class="form-label"><strong>ID Token:</strong></label>
                                    @if (!string.IsNullOrEmpty(idToken))
                                    {
                                        <textarea class="form-control font-monospace" rows="4" readonly>@idToken</textarea>
                                        <small class="text-muted">Length: @idToken.Length characters</small>
                                    }
                                    else
                                    {
                                        <p class="text-muted">Not available</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="card mb-4">
                            <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                                <h5 class="mb-0"><i class="bi bi-cloud-sun"></i> Call Protected Weather Forecast API</h5>
                                <button id="btnCallApi" class="btn btn-light btn-sm"><i class="bi bi-play-circle"></i> Call API</button>
                            </div>
                            <div class="card-body">
                                <p class="small text-muted mb-2">Demonstrates calling the protected MrWhoDemoApi using the current user's access token (scopes: api.read, api.write).</p>
                                <pre id="apiResult" class="bg-dark text-light p-3 rounded" style="min-height:120px; white-space: pre-wrap;"><em>Click "Call API" to fetch data...</em></pre>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header bg-warning text-dark">
                                <h5 class="mb-0"><i class="bi bi-list-ul"></i> User Claims</h5>
                            </div>
                            <div class="card-body">
                                @if (User.Claims.Any())
                                {
                                    <div class="table-responsive">
                                        <table class="table table-striped table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Claim Type</th>
                                                    <th>Value</th>
                                                    <th>Issuer</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var claim in User.Claims.OrderBy(c => c.Type))
                                                {
                                                    <tr>
                                                        <td><code>@claim.Type</code></td>
                                                        <td>@claim.Value</td>
                                                        <td><small class="text-muted">@claim.Issuer</small></td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                                else
                                {
                                    <p class="text-muted">No claims available</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12">
                        <div class="d-flex gap-2 flex-wrap">
                            <a href="/secure" class="btn btn-success">
                                <i class="bi bi-shield-check"></i> Access Secure Page
                            </a>
                            <a href="/Account/Logout" class="btn btn-outline-danger">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </a>
                            <a href="/debug/logout" class="btn btn-outline-warning">
                                <i class="bi bi-bug"></i> Debug Logout
                            </a>
                            <a href="https://localhost:7113/.well-known/openid-configuration" target="_blank" class="btn btn-outline-info">
                                <i class="bi bi-gear"></i> View OpenID Configuration
                            </a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <h4><i class="bi bi-info-circle"></i> Welcome to MrWho Demo!</h4>
                    <p>This application demonstrates <strong>OpenID Connect authentication</strong> with the MrWho OIDC Server.</p>
                    <p class="mb-0">Authentication is handled securely by redirecting to the trusted identity server.</p>
                </div>
                
                <div class="row mt-4">
                    <div class="col-md-8">
                        <h5>Features Available After Login:</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><i class="bi bi-check-circle text-success"></i> View your authentication tokens (Access, Refresh, ID)</li>
                            <li class="list-group-item"><i class="bi bi-check-circle text-success"></i> Inspect all user claims from the identity provider</li>
                            <li class="list-group-item"><i class="bi bi-check-circle text-success"></i> Access protected resources</li>
                            <li class="list-group-item"><i class="bi bi-check-circle text-success"></i> Test logout functionality</li>
                            <li class="list-group-item"><i class="bi bi-check-circle text-success"></i> Debug authentication flows</li>
                        </ul>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header bg-primary text-white">
                                <h6 class="mb-0"><i class="bi bi-shield-check"></i> Secure Login</h6>
                            </div>
                            <div class="card-body">
                                <p class="small mb-3">Login via MrWho Identity Server using OpenID Connect:</p>
                                
                                <div class="d-grid gap-2 mb-3">
                                    <a href="/Account/Login?direct=true" class="btn btn-primary">
                                        <i class="bi bi-box-arrow-in-right"></i> Login with MrWho
                                    </a>
                                    <small class="text-muted text-center">Direct redirect to identity server</small>
                                </div>
                                
                                <div class="d-grid gap-2">
                                    <a href="/Account/Login" class="btn btn-outline-primary">
                                        <i class="bi bi-info-circle"></i> Learn About Login Process
                                    </a>
                                    <small class="text-muted text-center">Understand how OIDC authentication works</small>
                                </div>
                                
                                <hr class="my-3">
                                
                                <div class="card bg-light">
                                    <div class="card-body p-2">
                                        <h6 class="card-title small mb-1"><i class="bi bi-person-badge"></i> Demo Credentials:</h6>
                                        <p class="small mb-1"><strong>Username:</strong><br><code>demo1@example.com</code></p>
                                        <p class="small mb-0"><strong>Password:</strong><br><code>Demo123</code></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="alert alert-light border">
                            <h6><i class="bi bi-lightbulb"></i> How OpenID Connect Works:</h6>
                            <ol class="mb-0 ps-3">
                                <li><strong>Initiate Login:</strong> Click "Login with MrWho" to start the authentication process</li>
                                <li><strong>Redirect to Identity Server:</strong> You'll be taken to the secure MrWho Identity Server</li>
                                <li><strong>Enter Credentials:</strong> Login with your username and password on the trusted server</li>
                                <li><strong>Return with Tokens:</strong> You'll be redirected back with authentication tokens</li>
                                <li><strong>Access Granted:</strong> Explore all the demo features with your authenticated session</li>
                            </ol>
                        </div>
                    </div>
                </div>
                
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="d-flex gap-2 flex-wrap">
                            <a href="/secure" class="btn btn-outline-secondary">
                                <i class="bi bi-shield-lock"></i> Try Accessing Secure Page
                            </a>
                            <a href="/debug/logout" class="btn btn-outline-warning">
                                <i class="bi bi-bug"></i> Debug Tools
                            </a>
                            <a href="https://localhost:7113/.well-known/openid-configuration" target="_blank" class="btn btn-outline-info">
                                <i class="bi bi-gear"></i> View OpenID Configuration
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const btn = document.getElementById('btnCallApi');
        if (!btn) return;
        btn.addEventListener('click', async () => {
            const resultEl = document.getElementById('apiResult');
            resultEl.textContent = 'Calling API...';
            try {
                const resp = await fetch('/call-api');
                const data = await resp.json();
                if (data.body) {
                    // If body is a JSON string of the forecast, try to pretty print
                    let prettyBody = data.body;
                    try {
                        const parsed = JSON.parse(data.body);
                        prettyBody = JSON.stringify(parsed, null, 2);
                    } catch { }
                    resultEl.textContent = `Status: ${data.status} (ok=${data.ok})\n${prettyBody}`;
                } else {
                    resultEl.textContent = JSON.stringify(data, null, 2);
                }
            } catch (e) {
                resultEl.textContent = 'Error calling API: ' + e;
            }
        });
    });
</script>
}

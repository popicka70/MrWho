@page
@model MrWhoDemo1.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-box-arrow-in-right"></i> Login to MrWho Demo 1</h4>
                </div>
                <div class="card-body">
                    <p class="text-muted">You will be redirected to the MrWho Identity Server to authenticate.</p>
                    
                    <div class="alert alert-info">
                        <h6><i class="bi bi-info-circle"></i> Demo Credentials:</h6>
                        <p class="mb-1"><strong>Username:</strong> demo1@example.com</p>
                        <p class="mb-0"><strong>Password:</strong> Demo123</p>
                    </div>
                    
                    <form method="post">
                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-shield-lock"></i> Login with MrWho
                        </button>
                    </form>
                    
                    <hr>
                    
                    <div class="text-center">
                        <small class="text-muted">
                            Powered by <strong>MrWho Identity Server</strong><br>
                            Using OpenID Connect
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
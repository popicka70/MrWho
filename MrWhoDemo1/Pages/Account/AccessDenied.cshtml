@page
@model MrWhoDemo1.Pages.Account.AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Access Denied</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <strong>Sorry, you don't have permission to access this demo application.</strong>
                    </div>
                    
                    <p>This could happen for several reasons:</p>
                    <ul>
                        <li><strong>Realm Restriction:</strong> Your user account may belong to a different realm than the one required for this demo application.</li>
                        <li><strong>Account Status:</strong> Your account may be disabled or require additional setup.</li>
                        <li><strong>Demo Configuration:</strong> The demo application may have specific access restrictions.</li>
                    </ul>

                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h6 class="card-title"><i class="bi bi-info-circle"></i> Demo Application Access</h6>
                            <p class="mb-1">This is <strong>MrWho Demo Application 1</strong></p>
                            <p class="mb-1"><strong>Required Realm:</strong> <code>demo</code></p>
                            <p class="mb-0"><strong>Valid Demo Account:</strong> <code>demo1@example.com</code></p>
                        </div>
                    </div>

                    <h6 class="mt-4">What you can do:</h6>
                    <ul>
                        <li>Try logging in with the demo account: <code>demo1@example.com</code></li>
                        <li>Contact your administrator if you need access to this demo</li>
                        <li>Ensure you're using the correct demo credentials</li>
                    </ul>

                    @if (!string.IsNullOrEmpty(HttpContext.Request.Query["ReturnUrl"]))
                    {
                        <div class="mt-4">
                            <small class="text-muted">
                                <strong>Attempted URL:</strong> @HttpContext.Request.Query["ReturnUrl"]
                            </small>
                        </div>
                    }

                    <div class="d-flex gap-2 mt-4">
                        <a href="/Account/Login" class="btn btn-primary">
                            <i class="bi bi-arrow-left"></i> Try Different Account
                        </a>
                        <a href="/" class="btn btn-outline-secondary">
                            <i class="bi bi-house"></i> Go to Home
                        </a>
                        <a href="https://localhost:7113/debug/demo1-client-info" target="_blank" class="btn btn-outline-info">
                            <i class="bi bi-bug"></i> Debug Info
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card-header .bi {
        margin-right: 8px;
    }
</style>
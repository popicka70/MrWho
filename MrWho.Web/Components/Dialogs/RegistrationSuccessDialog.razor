@inject DialogService DialogService
@inject NavigationManager Navigation

<div class="text-center">
    <RadzenIcon Icon="check_circle" IconStyle="IconStyle.Success" Style="font-size: 4rem;" />
    
    <RadzenText TextStyle="TextStyle.H5" Class="mt-3 mb-3">
        Welcome to MrWho, @User?.FirstName!
    </RadzenText>
    
    <RadzenText TextStyle="TextStyle.Body1" Class="mb-3">
        Your account has been created successfully.
    </RadzenText>
    
    <div class="alert alert-info">
        <RadzenText TextStyle="TextStyle.Body2">
            <strong>Account Details:</strong><br />
            Email: @User?.Email<br />
            Username: @User?.UserName<br />
            Created: @User?.CreatedAt.ToString("MMM dd, yyyy 'at' HH:mm")
        </RadzenText>
    </div>
    
    <RadzenText TextStyle="TextStyle.Body2" Class="mb-4 text-muted">
        You can now use your credentials to sign in and access our services.
    </RadzenText>
    
    <div class="d-flex gap-2 justify-content-center">
        <RadzenButton Text="Create Another Account" 
                    ButtonStyle="ButtonStyle.Light" 
                    Click="@CreateAnother" />
        <RadzenButton Text="Go to Sign In" 
                    ButtonStyle="ButtonStyle.Primary" 
                    Click="@GoToSignIn" />
    </div>
</div>

@code {
    [Parameter] public UserRegistrationResponse? User { get; set; }

    private void CreateAnother()
    {
        DialogService.Close();
    }

    private void GoToSignIn()
    {
        DialogService.Close();
        Navigation.NavigateTo("/login");
    }
}